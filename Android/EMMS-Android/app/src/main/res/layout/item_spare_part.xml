<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/multi_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/id_spare_part_name_layout">
                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:id="@+id/select_layout"
                        android:visibility="visible">
                        <ImageView
                            android:id="@+id/select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:background="@mipmap/spare_part_select_pressed"
                            />
                        <ImageView
                            android:id="@+id/select_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:background="@mipmap/spare_part_select_normal"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/id_spare_part_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/select_layout"
                        android:text="备件名称"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:ellipsize="end"
                        android:textColor="@color/text_color"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spare_part_position"
                    android:layout_below="@+id/id_spare_part_name_layout"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="备件库位："
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/lightgray_textcolor"
                        android:id="@+id/spare_part_positionTxt"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spare_part_positionTxt">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="8"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/text_color"
                            android:id="@+id/spare_part_positionVal"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spare_part_brand"
                    android:layout_below="@+id/spare_part_position"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:id="@+id/spare_part_brandTxt"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="备件品牌："
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/lightgray_textcolor"
                        android:textSize="12sp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spare_part_brandTxt">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="8"
                            android:textColor="@color/text_color"
                            android:id="@+id/spare_part_brandVal"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spare_part_type"
                    android:layout_below="@+id/spare_part_brand"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="备件类型："
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/lightgray_textcolor"
                        android:id="@+id/spare_part_typeTxt"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spare_part_typeTxt">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_alignParentRight="true"
                            android:text="8"
                            android:ellipsize  = "end"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:id="@+id/spare_part_typeVal"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spare_part_last_replace_time"
                    android:layout_below="@+id/spare_part_type"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="替换时间："
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/lightgray_textcolor"
                        android:id="@+id/spare_part_last_replace_timeTxt"
                        android:visibility="gone"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spare_part_last_replace_timeTxt">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_alignParentRight="true"
                            android:text="8"
                            android:visibility="gone"
                            android:ellipsize  = "end"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:id="@+id/spare_part_last_replace_timeVal"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spare_part_quantity"
                    android:layout_below="@+id/spare_part_last_replace_time"
                    android:paddingLeft="0dp"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="库存数量："
                        android:textColor="@color/lightgray_textcolor"
                        android:id="@+id/spare_part_quantityTxt"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spare_part_quantityTxt"
                        android:layout_toLeftOf="@+id/num_add_reduce">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="10"
                            android:layout_alignParentRight="true"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/text_color"
                            android:id="@+id/spare_part_quantityVal"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/num_add_reduce"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:visibility="visible"
                        >
                        <TextView
                            android:id="@+id/btn_reduce"
                            android:layout_width="30dp"
                            android:layout_height="28dp"
                            android:background="@drawable/bg_btn_reduce"
                            android:gravity="center"
                            android:text="－"
                            android:textColor="@color/black" />

                        <!--android:focusableInTouchMode="false"-->
                        <EditText
                            android:id="@+id/amount"
                            android:layout_width="30dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/bg_edit"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength ="3"
                            android:imeOptions="actionDone"
                            android:text="0" />

                        <TextView
                            android:id="@+id/btn_add"
                            android:layout_width="30dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/bg_btn_add"
                            android:gravity="center"
                            android:text="＋"
                            android:textColor="@color/black" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/id_selectNum"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#DFDFDF"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_free"
                    android:contentDescription="@null"
                    android:layout_centerInParent="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textSize="30dp"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:id="@+id/selectNumTxt"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>