<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multi_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_free"
                android:id="@+id/workstatus"
                android:textColor="@color/white"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="8dp" />
            <!--TextView
                 android:layout_marginTop="13dp"
                 android:paddingLeft="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/workname"
                 android:textSize="16sp"
                 android:textColor="@color/text_color"
                 android:id="@+id/textView22"
                 android:layout_alignParentTop="true" /-->
            <TextView
                android:id="@+id/id_worknum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工单号"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@+id/workstatus"
                android:layout_marginLeft="31dp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/work_timeused"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="15"
                    android:textColor="@color/text_color"
                    android:id="@+id/work_timeusedTxt"
                    android:layout_marginRight="5dp"/>
                <ImageView
                    android:id="@+id/work_timeusedIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/time_count"
                    android:contentDescription="@null"
                    android:layout_toRightOf="@+id/work_timeusedTxt"
                    android:layout_toEndOf="@+id/work_timeusedTxt"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/work_position"
                android:layout_below="@+id/id_worknum"
                android:paddingLeft="6dp"
                android:layout_marginTop="5dp">
                <ImageView
                    android:id="@+id/work_positionIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/organ_pos"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="新厂安装改造组"
                    android:textColor="@color/lightgray_textcolor"
                    android:id="@+id/work_positionTxt"
                    android:layout_toRightOf="@+id/work_positionIcon"
                    android:layout_toEndOf="@+id/work_positionIcon"
                    android:layout_marginLeft="8dp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/work_taskcompleted"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="8"
                        android:textColor="@color/text_color"
                        android:id="@+id/work_taskcompletedTxt"
                        android:layout_marginRight="5dp"/>
                    <ImageView
                        android:id="@+id/work_taskcompletedIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/task_completed"
                        android:contentDescription="@null"
                        android:layout_toRightOf="@+id/work_taskcompletedTxt"
                        android:layout_toEndOf="@+id/work_taskcompletedTxt"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/work_equipment"
                android:layout_below="@+id/work_position"
                android:paddingLeft="6dp"
                android:layout_marginTop="1dp">
                <ImageView
                    android:id="@+id/work_equipmentIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/work_equm"
                    android:contentDescription="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="GEK圆机K155"
                    android:textColor="@color/lightgray_textcolor"
                    android:id="@+id/work_equipmentTxt"
                    android:layout_toRightOf="@+id/work_equipmentIcon"
                    android:layout_toEndOf="@+id/work_equipmentIcon"
                    android:layout_marginLeft="8dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/work_wip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="8"
                        android:textColor="@color/text_color"
                        android:id="@+id/work_wipTxt"
                        android:layout_marginRight="5dp"/>
                    <ImageView
                        android:id="@+id/work_wipIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_wip"
                        android:contentDescription="@null"
                        android:layout_toRightOf="@+id/work_wipTxt"
                        android:layout_toEndOf="@+id/work_wipTxt"/>
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_workselect"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout">
            <ImageView
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/select_normal"
                android:contentDescription="@null"
                android:layout_centerInParent="true" />
            <ImageView
                android:id="@+id/select_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/select_normal"
                android:contentDescription="@null"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>